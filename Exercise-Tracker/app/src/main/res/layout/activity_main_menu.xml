<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"

    android:background="@drawable/bg_gradient"

    android:columnCount="1"

    >
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_margin="0dp"
        android:padding="0dp">
        <TextView
            android:text="Monday, 31 October"
            android:textSize="18dip"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_date"
            android:layout_height="match_parent" />
        <TextView
            android:text="Artur"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18dip"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_userName"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="380dp"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/foots48"
            android:layout_height="wrap_content" />
        <TextView
            android:text="STEPS"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/flame48"
            android:layout_height="wrap_content" />
        <TextView
            android:text="CALS"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/et_steps"
            android:text="777"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="48dp"
            android:gravity="center"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:textColor="@color/tBlue"
            android:layout_height="match_parent"
            />

        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/et_calories"
            android:text="888"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="48dp"
            android:gravity="center"
            android:layout_marginBottom="0dp"
            android:textColor="@color/tBlue"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/time48"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Duration"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/goal48"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Progress"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_timer"
            android:text="01:22:47"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="42dp"
            android:gravity="center"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:textColor="@color/tBlue"
            android:layout_height="match_parent"
            />

        <TextView
            android:text="44%"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="42dp"
            android:gravity="center"
            android:id="@+id/tv_goal"
            android:layout_marginBottom="0dp"
            android:textColor="@color/tBlue"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graph"
            android:drawableLeft="@drawable/chart48"

            android:id="@+id/btn_graph"
            android:onClick="doGraphActivity"
            android:visibility="visible"
            android:background="@drawable/main_menu_btn"
            android:textColor="#000000"
            android:paddingRight="48dp" />
    </LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_startTime"
        android:editable="false"
        android:visibility="gone"
        android:textColor="#1A237E"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_endTime"
        android:editable="false"
        android:visibility="gone"
        android:textColor="#1A237E"/>

    <Button
        android:layout_margin="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:drawableLeft="@drawable/stop48"
        android:id="@+id/btn_stopSession"
        android:onClick="doStop"
        android:visibility="visible"

        android:background="@drawable/main_menu_btn"
        android:textColor="#000000"
        android:paddingRight="48dp"
        android:layout_row="9"
        android:layout_column="0" />

</GridLayout>
