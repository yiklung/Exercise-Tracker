<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_gradient"
    tools:context="com.example.ext.exercise_tracker.LogActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:onClick="doStart"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/et_psw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_btn_login"
        android:onClick="doCheck"
        android:id="@+id/btn_login"
        android:visibility="visible"
        android:width="300dp"
        android:background="#1496BB"
        android:textColor="#ffffff"

        android:layout_alignBottom="@+id/tv_un"
        android:layout_toStartOf="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_un"
        android:textColor="#ffffff"
        android:hint="Login"
        android:width="300dp"
        android:textSize="22dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/et_psw"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:textColor="#ffffff"
        android:id="@+id/et_psw"
        android:width="300dp"
        android:textSize="22dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/et_un"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_tv_un"
        android:id="@+id/tv_un"
        android:textSize="20dp"
        android:visibility="invisible"
        android:textColor="#f26d21"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_tv_psw"
        android:id="@+id/tv_psw"
        android:textColor="#f26d21"
        android:textSize="20dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/tv_un"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_ip_setting"
        android:text="@string/a_et_defIP"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
