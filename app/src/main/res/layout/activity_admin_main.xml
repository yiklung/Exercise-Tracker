<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    tools:context="com.example.ext.exercise_tracker.AdminMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_tv_username"
        android:id="@+id/tv_cUsername"
        android:width="200dp"
        android:textSize="20dp"
        android:textColor="#f26d21"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_cUsername"
        android:width="200dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tv_cUsername"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/tv_cPassword"
        android:width="200dp"
        android:textSize="20dp"
        android:textColor="#f26d21"
        android:layout_below="@+id/et_cUsername"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_cPassword"
        android:width="200dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tv_cPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_fullname"
        android:id="@+id/tv_fn"
        android:width="200dp"
        android:textSize="20dp"
        android:textColor="#f26d21"
        android:layout_below="@+id/et_cPassword"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_cFullname"
        android:width="200dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tv_fn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_create"
        android:id="@+id/btn_create"
        android:onClick="doCreate"
        android:background="#1496BB"
        android:textColor="#ffffff"
        android:layout_below="@+id/et_cFullname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_btn_back"
        android:id="@+id/button6"
        android:onClick="doBack"
        android:background="#1496BB"
        android:textColor="#ffffff"
        android:layout_below="@+id/et_cFullname"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/et_cFullname" />
</RelativeLayout>
